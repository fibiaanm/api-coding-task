  "license": "MIT",
  "authors": [
    {
      "name": "Freepik Company Backend Guild",
      "email": "dev@freepik.com"
    }
  ],
  "version": "1.0.0",
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "firebase/php-jwt": "^6.10",
    "vlucas/phpdotenv": "^5.6",
    "respect/validation": "^2.3",
    "ext-redis": "*",
    "zircote/swagger-php": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "allow-plugins": true
  },
  "scripts": {
    "swagger": "vendor/bin/openapi src/ --output public/swagger.json"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  }
}
